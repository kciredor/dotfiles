# Terminal.
alt - return : open -na /Applications/iTerm.app

# Tiling vs float.
alt - space : yabai -m config layout bsp
shift + alt - space : yabai -m config layout float

# Switch between windows on current space.
alt - t : yabai -m window --focus next || yabai -m window --focus first

# Swap windows on current space.
shift + alt - t : yabai -m window --swap next || yabai -m window --swap first

# Fullscreen.
alt - f : yabai -m window --toggle zoom-fullscreen

# Toggle tiling for currently active window.
shift + alt - f : yabai -m window --toggle float

# Throw window to next monitor and keep focus on window.
alt-o : yabai -m window --display recent && yabai -m display --focus recent

# Switch focus between monitors.
alt-s : yabai -m display --focus next || yabai -m display --focus first

# Space switching.
shift + alt - a : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - o : yabai -m window --space next; yabai -m space --focus next
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
