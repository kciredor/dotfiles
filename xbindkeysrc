# Audio.
"amixer set Master toggle && amixer set -c 0 Headphone unmute 100% && (amixer get Master | grep '\[on\]' && notify-send 'Volume' 'ON') || notify-send 'Volume' 'OFF'"
    XF86AudioMute

"amixer set -c 0 Master 5-"
    XF86AudioLowerVolume

"amixer set Master unmute && amixer set -c 0 Headphone unmute 100% && amixer set -c 0 Master 5+"
    XF86AudioRaiseVolume


# Brightness.
"xbacklight -dec 5"
    XF86MonBrightnessDown

"xbacklight -inc 5"
    XF86MonBrightnessUp


# Spotify.
"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
    XF86AudioPlay

"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"
    XF86AudioStop

"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
    XF86AudioPrev

"dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
    XF86AudioNext


